  </div>

  <div class="field">
    <%= form.label :published %>
    <%= form.datetime_select :published %>
  </div>

  <div class="field">
    <%= form.label :summary %>
    <%= form.text_area :summary %>
  </div>

  <div class="field">
    <%= form.label :searched %>
